<main>
    <h1 class="p-2 text-center w-100" id="title">
        Productos
    </h1>
    <section class="d-flex flex-wrap justify-content-center align-items-center m-3">
        {{#each products}}
            <div class="card col-lg-2 col-md-3 col-sm-4 mb-3 mx-2 rem-8" id="card" onclick="showDetail('{{this._id}}')">
                <img src={{this.photo}} class="card-img-top" alt="">
                <div class="card-body d-flex flex-column align-items-stretch" id="card-body">
                    <h5 class="card-title pt-2 text-center">{{this.title}}</h5>
                    <p class="card-text p-2 text-end">${{this.price}}</p>
                </div>
            </div>
        {{/each}}
    </section>
    {{#if pagInfo}}
        <div class="pagination">
        {{#if pagInfo.hasPrevPage}}
            <a href="/products?page={{pagInfo.PrevPage}}" class="btn btn-secondary">Página anterior</a>
        {{/if}}

        <span>Página {{pagInfo.page}}</span>

        {{#if pagInfo.hasNextPage}}
        <a href="/products?page={{pagInfo.NextPage}}" class="btn btn-secondary">Página siguiente</a>
        {{/if}}
        </div>
    {{/if}}
</main>

<style>
    .pagination{
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: center;
    }
    .pagination a{
        margin: 1rem 1rem !important;
        padding: 0.3rem 1rem !important;
        border-radius: 4%;
        background: #FD9843;
        border: none;
        font-weight: 500;
        box-shadow: 2px 2px 3px #fd9840;    
    }


    #title  {
        background-color:#FEB272; 
        color: #fff; 
        font-weight: 600;
        text-shado
        w: 1px 1px 1px #000;
    }
    .card-title {
        height: 2rem; /* Asegura que todas las tarjetas tengan al menos la misma altura */
    }
</style>
<script>
    function showDetail(id) {
        window.location.href = `/products/${id}`;
    }
</script>